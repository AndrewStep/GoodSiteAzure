@model DAL.CARSINFO

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input-validation-error {
        background-color: lightcoral;
        border: 1px solid red;
    }

    .validation-summary-errors {
        color: red;
        font-size: 22px;
    }

    ul {
        list-style-type: none;
    }
</style>
<center>
    <h2><p class="text-success">Добавить</p></h2>
    @using (Html.BeginForm())
    {
        <div>@Html.ValidationSummary()</div>
       
        <div class="form-group col-md-3">
            @Html.Label("Категория", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control text-success" } })</p>
            @Html.Label("Имя", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.CarName, new { htmlAttributes = new { @class = "form-control text-success" } })</p>
            @Html.Label("Возраст", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control text-success" } }) </p>
            @Html.Label("Цена", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control text-success" } }) </p>
            @Html.Label("Цвет", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control text-success" } }) </p>
            @Html.Label("Изображение", new { @class = "col-form-label text-success" })
            <p>  @Html.EditorFor(model => model.CarImage, new { htmlAttributes = new { @class = "form-control text-success" } })</p>
        </div>
        <div>
            <input type="submit" class="btn btn-outline-success" value="Добавить">
            |
            @Html.ActionLink("Back to List", "Index", null, new { id = 0 }, new { @class = "btn btn-outline-success" })
        </div>
    }
</center>
